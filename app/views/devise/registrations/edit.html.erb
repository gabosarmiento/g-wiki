<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">

    <div class="control-group">
    <%= f.label :username, class: 'control-label'  %>
    <div class="controls">
      <%= f.text_field :username, :autofocus => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, class: 'control-label'  %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="control-group">
      <p>Waiting confirmation for:</p>
      <div class="controls">
        <%= resource.unconfirmed_email %>
      </div>
    </div>
  <% end %>

    <% unless current_user.provider? %>
    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password , :placeholder => "change password" %>
        <i>(leave blank if you don't want to change it)</i>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= image_tag(current_user.avatar.small.url) if current_user.avatar? %>
    <%= f.label :avatar, class: 'control-label' %>
    <div class="controls"> 
      <%= f.file_field :avatar %>
    </div>
  </div> 


  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update", class: 'button small radius' %>
    </div>
  </div>  
<% end %>

<h3>Cancel my account</h3>
<div class="horizontal-form">
  <div class="control-group">
    <div class="controls">
      <p>
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button small radius' %>
      </p>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>
