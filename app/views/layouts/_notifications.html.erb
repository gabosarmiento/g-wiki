<% if flash[:notice] %>
  <div data-alert class="alert-box info radius">
    <%= flash[:notice] %>
    <a href='#' class="close">&times;</a>
  </div>
<% elsif flash[:error] %>
  <div data-alert class="alert-box error radius">
    <%= flash[:error] %>
    <a href='#' class="close">&times;</a>
  </div>
<% elsif flash[:alert] %>
  <div data-alert class="alert-box warning radius">
    <%= flash[:alert] %>
    <a href='#' class="close">&times;</a>
  </div>
<% end %>