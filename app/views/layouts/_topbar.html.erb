<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "G-WIKI", root_path %></h1>          
    </li>
  </ul>
  
  <section class="top-bar-section" >
    <% if current_user %>
      <%= form_tag wikis_path, method: :get do %>
        <ul class= "left">
          <li class="has-form">
            <div class="row collapse">
              <div class="large-11 small-9 columns ">
                <%= text_field_tag :query, params[:query] , placeholder: 'Search wikis and content' %>
              </div>
              <div class="large-1 small-3 columns">
                <%= button_tag(type: "submit", name: nil , class: "button") do %>
                <i class="fi-magnifying-glass large"></i>
                <% end %>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    <% end %>
    <% unless current_user %>
      <ul class="right">
        <li> <%= link_to "Already a Member?", new_user_session_path %></li>
      </ul>
    <% end %>
  </section>
</nav>